<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Bootstrap Select CSS -->
  <link rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css">

  <style>
    /* Target only this input by its ID */

    #student_id,#student_name,#student_course
    {
    
        box-shadow: none;
    }
  
  </style>

</head>

<body style="height:100vh">

  <div class="container-fluid h-100">
    <div class="row h-100 justify-content-center align-items-center">
      <div class="col-3">
        <div class="card shadow p-4">
          <div class="card-title h4 text-center">Assign Student Batch</div>
          <div class="card-body">

            <form action="/admin-user/batch/manage-student-batch/assign-student-batch-request" method="post">
              <% if(sendData.student_id===null) { %>
                <label> Student ID</label>
                <input type="number" name="student_id" id="student_id" class="form-control" required>
                <div class="d-grid pt-4">
                  <input type="submit"  value="Next" name="assign_student_batch" id="assign_student_batch"  class="btn btn-primary">
                </div>
                <% } else { %>

                  <label>Student ID</label>
                  <input type="number" name="student_id" id="student_id"
                    class="form-control mb-3 bg-secondary   fw-bolder text-danger-emphasis "
                    value="<%= sendData.result[0].student_id %>" readonly>

                  <label>Student Name</label>
                  <input type="text" name="student_name" id="student_name" class="form-control mb-3 bg-secondary   fw-bolder text-danger-emphasis "
                    value="<%=sendData.result[0].student_name %>" readonly>

                  <label>Course Name</label>
                  <input type="" text" name="student_couse" id="student_course" class="form-control mb-3 bg-secondary   fw-bolder text-danger-emphasis "
                    value="<%= sendData.result[0].course_name %>" readonly>
                  <label>Select Batch Name</label>

                  <select class="selectpicker w-100" id="batch_id" name="batch_id" data-dropup-auto="false">
                    <% sendData.result.forEach(function(batch) { %>
                      <option value="<%= batch.batch_id %>">
                        <%= batch.batch_name %>
                      </option>
                      <% }); %>
                  </select>
                  <div class="d-grid pt-4">
                    <input type="submit" name="assign_student_batch" id="assign_student_batch" class="btn btn-primary
                      mt1" value="Assign Batch">

                  </div>

                  <% } %>





            </form>

          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- jQuery (needed for Bootstrap Select) -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>



</body>

</html>