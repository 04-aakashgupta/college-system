
<!-- attendence view html code -->

<!DOCTYPE html>
<html lang="en">    
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Select CSS -->
    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css">
</head> 

<body style="height: 100vh;">

    <div class="container-fluid  h-100">
        <div class="row h-100 justify-content-center m-5">
            <div class="col-md-6 col-sm-10">

                <% if(typeof sendData!=='undefined' ) { %>
                    <div class="card-title h4 text-center text-capitalize">
                        View Attendence Of <%= sendData.result[0].batch_name %>  date <%= sendData.result[0].attendence_date.toLocaleDateString() %>
                    </div>
                    <div class="card-body">

                   <table
                                class=" mt-2 table table-bordered border-primary table-hover table-striped text-center">
                                <thead>
                                    <tr class="table-dark">
                                        <th scope="col">#</th>
                                        <th scope="col">Student ID</th>
                                        <th scope="col">Student Name</th>
                                        <th scope="col">Attendence Status</th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                    <% let count=0; sendData.result.forEach(function (student) { %>
                                        <tr>
                                            <td>
                                                <%= ++count %>
                                            </td>
                                            <td>
                                                <%= student.student_id %>
                                            </td>
                                            <td>
                                                <%= student.student_name %>
                                            </td>
                                            <td>
                                                <% if(student.attendence_status==='present'){ %>
                                                    <span class="badge bg-success">Present</span>
                                                <% } else{ %>
                                                    <span class="badge bg-danger">Absent</span>
                                                <% } %>
                                            </td>
                                          
                                        </tr>
                                    <% }) %>


                                </tbody>
                            </table>    
                        <% } else{ %>
                            <h4 class="text-danger text-center">Something Went Wrong</h4>
                        <%} %>
                    </div>
                </div>
            </div>  
        </div>
    </div>  
    <!-- jQuery (needed for Bootstrap Select) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js
"></script> 

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>
</body> 
</html>
<!-- attendence view html code end -->





