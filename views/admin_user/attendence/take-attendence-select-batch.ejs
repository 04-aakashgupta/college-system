<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Select CSS -->
    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css">


</head>

<body style="height: 100vh;">
    <div class="container-fluid  h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-3">
                <div class="card  shadow  p-3">
                    <div class="card-title h4 text-center">
                        Take Attendence
                    </div>
                    <div class="card-body">

                        <% if(typeof sendData!=='undefined' ) { %>
                            <form action="/admin-user/attendence/take-select-batch-request" method="post">
                                <label>Select Batch Name</label>

                                <select class="selectpicker w-100" id="batch_id" name="batch_id"
                                    data-dropup-auto="false">
                                    <% sendData.result.forEach(function(batch) { %>
                                        <option value="<%= batch.batch_id %>">
                                            <%= batch.batch_name %>
                                        </option>
                                        <% }); %>
                                </select>
                                <div class="d-grid mt-3">
                                    <input type="submit" value="Next" class="btn btn-primary">
                                </div>

                            </form>

                            <% } else{ %>

                                <h4 class="text-danger text-center">Something Went Wrong</h4>
                                <%} %>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- jQuery (needed for Bootstrap Select) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>


</body>

</html>